<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/claire"
    android:contextClickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="OFF"
        android:id="@+id/btn_off"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/credit_1"
        android:backgroundTint="#baffdd"
        android:layout_alignTop="@+id/encrypt_btn"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Encryption Module"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/credit_1"
        android:editable="true"
        android:layout_alignTop="@+id/credit_3"
        android:layout_toStartOf="@+id/textView2" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/credit_3"
        android:editable="true"
        android:layout_alignTop="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Light Beam Encryption"
        android:id="@+id/encrypt_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText3"
        android:backgroundTint="#9edeff"
        android:layout_alignStart="@+id/credit_3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First"
        android:ems="10"
        android:id="@+id/first_name"
        android:layout_below="@+id/credit_1"
        android:layout_alignStart="@+id/credit_1"
        android:layout_marginTop="58dp"
        android:layout_toStartOf="@+id/last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last"
        android:ems="10"
        android:id="@+id/last_name"
        android:layout_alignBottom="@+id/first_name"
        android:layout_toEndOf="@+id/btn_off" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/last_name"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="CVV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:text="Expiration Date (MMYY)"
        android:layout_alignEnd="@+id/credit_3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="ON"
        android:id="@+id/btn_on"
        android:backgroundTint="#baffdd"
        android:layout_alignStart="@+id/first_name"
        android:layout_alignBottom="@+id/encrypt_btn" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText4"
        android:editable="true"
        android:layout_above="@+id/first_name"
        android:layout_toStartOf="@+id/last_name" />

</RelativeLayout>
